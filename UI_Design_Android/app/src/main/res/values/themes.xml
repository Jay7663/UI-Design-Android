<resources>
    <!-- Base application theme. -->
    <style name="Theme.UIDesignAndroid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SplashScreenTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/full_splash_screen</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="CustomMainEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:fontFamily">@font/urbanist_semibold</item>
        <item name="android:textColor">@color/Greyscale_900</item>
        <item name="android:drawablePadding">@dimen/_15sdp</item>
        <item name="android:background">@drawable/custom_input</item>
        <item name="singleLine">true</item>
        <item name="android:padding">@dimen/_11sdp</item>
        <item name="android:paddingStart">@dimen/_12sdp</item>
        <item name="android:paddingEnd">@dimen/_12sdp</item>
        <item name="android:textCursorDrawable">@drawable/input_cursor_color</item>
    </style>

    <style name="CustomCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/custom_check</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:foregroundTint">@android:color/transparent</item>
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:fontFamily">@font/urbanist_semibold</item>
        <item name="android:textColor">@color/Greyscale_900</item>
    </style>

    <style name="CustomPrimaryButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/urbanist_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SocialMediaButtons" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_signin_with</item>
        <item name="android:paddingStart">@dimen/_25sdp</item>
        <item name="android:paddingEnd">@dimen/_25sdp</item>
        <item name="android:paddingTop">@dimen/_15sdp</item>
        <item name="android:paddingBottom">@dimen/_15sdp</item>
    </style>

    <style name="ImageButtonWithText" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_signin_with</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/white</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@null</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:fontFamily">@font/urbanist_semibold</item>
        <item name="android:textColor">@color/Greyscale_900</item>
    </style>

    <style name="CustomDividerTextView" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:fontFamily">@font/urbanist_semibold</item>
        <item name="android:textColor">@color/Greyscale_700</item>
    </style>


    <style name="TextViewWithLink" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:fontFamily">@font/urbanist_regular</item>
        <item name="android:textColor">@color/Greyscale_500</item>
    </style>

    <style name="LargeHeaderTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_33ssp</item>
        <item name="android:fontFamily">@font/urbanist_bold</item>
        <item name="android:textColor">@color/Greyscale_900</item>
    </style>

    <style name="RegularFontTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:fontFamily">@font/urbanist_regular</item>
        <item name="android:textColor">@color/Greyscale_900</item>
    </style>

    <style name="MediumFontTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_9ssp</item>
        <item name="android:fontFamily">@font/urbanist_medium</item>
        <item name="android:textColor">@color/Greyscale_600</item>
    </style>

    <style name="BoldFontTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:fontFamily">@font/urbanist_bold</item>
        <item name="android:textColor">@color/Greyscale_900</item>
    </style>

    <style name="EditTextOtp" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/custom_input</item>
        <item name="android:lines">1</item>
        <item name="android:maxLength">1</item>
        <item name="android:inputType">number</item>
        <item name="android:paddingStart">@dimen/_28sdp</item>
        <item name="android:paddingEnd">@dimen/_28sdp</item>
        <item name="android:paddingTop">@dimen/_15sdp</item>
        <item name="android:paddingBottom">@dimen/_15sdp</item>
        <item name="android:textCursorDrawable">@drawable/input_cursor_color</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:fontFamily">@font/urbanist_bold</item>
        <item name="android:textColor">@color/Greyscale_900</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/rounded_corner_dialog_box</item>
    </style>

    <style name="AlertHeader" parent="Widget.AppCompat.TextView">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/_19ssp</item>
        <item name="android:fontFamily">@font/urbanist_bold</item>
        <item name="android:textColor">@color/primary_500</item>
    </style>

</resources>