<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_selected="true">
        <ripple android:color="@color/primary_500">

            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="@dimen/_2sdp" android:color="@color/primary_500" />
                    <corners android:radius="23dp" />
                </shape>
            </item>

            <item android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <corners android:radius="23dp" />
                    <solid android:color="@color/white" />
                </shape>
            </item>

        </ripple>
    </item>

    <item android:state_enabled="true" android:state_selected="false">
        <ripple android:color="@color/Greyscale_600">

            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="1dp" android:color="@color/Greyscale_200" />
                    <corners android:radius="23dp" />
                </shape>
            </item>

            <item android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <corners android:radius="23dp" />
                    <solid android:color="@color/white" />
                </shape>
            </item>

        </ripple>
    </item>
</selector>